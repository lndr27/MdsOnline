@model Lndr.MdsOnline.Models.ViewData.DocumentoViewData
@using Lndr.MdsOnline.Models.Enum
@{
    ViewBag.Title = "NovoDocumento";
}

<h2>NovoDocumento</h2>

@using (Html.BeginForm("SalvarDocumento", "AdminDocumentacao", FormMethod.Post, new { @data_ng_controller = "EdicaoDocumentoController" }))
{

    <div class="row">

        <div class="col-md-2">
            @Html.LabelFor(m => m.Nome)
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
        </div>

        <div class="col-md-2">
            @Html.LabelFor(m => m.Descricao)
            @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control" })
        </div>

        <div class="col-md-2">
            @Html.LabelFor(m => m.TipoDocumentoID)
            @Html.DropDownListFor(m => m.TipoDocumentoID, EnumHelper.GetSelectList(typeof(TipoDocumentoEnum)), "Selecione ...", new { @class = "form-control" })
        </div>

    </div>

    <div class="row" data-tipo-documento="Checklist">
        <button class="btn btn-default">Adicionar Grupo</button>
    </div>

    <div class="row" data-tipo-documento="Texto">
        <button class="btn btn-default">Adicionar Tópico</button>
    </div>

}